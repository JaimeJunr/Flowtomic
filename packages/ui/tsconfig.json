{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@flowtomic/ui/*": ["./src/*"],
      "@flowtomic/logic": ["../logic/src"],
      "@flowtomic/logic/*": ["../logic/src/*"]
    },
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    ".storybook"
  ],
  "references": [{ "path": "../logic" }]
}
